                                            <font><Font name="System Bold" size="12.0" /></font>
                                        </Label>
                                        <Label layoutX="18.0" layoutY="161.0" prefHeight="20.0" prefWidth="52.0" text="E-Mail:" textAlignment="CENTER" textFill="WHITE">
                                            <font><Font name="System Bold" size="12.0" /></font>
                                        </Label>
                                        <Label layoutX="17.0" layoutY="187.0" prefHeight="20.0" prefWidth="70.0" text="Geschlecht:" textAlignment="CENTER" textFill="WHITE">
                                            <font><Font name="System Bold" size="12.0" /></font>
                                        </Label>
                                        <Label layoutX="17.0" layoutY="213.0" prefHeight="20.0" prefWidth="52.0" text="Rolle:" textAlignment="CENTER" textFill="WHITE">
                                            <font><Font name="System Bold" size="12.0" /></font>
                                        </Label>

                                        <Label fx:id="firstNameLabel1" layoutX="124.0" layoutY="54.0" prefHeight="20.0" prefWidth="98.0" text="Vorname" textAlignment="CENTER" textFill="WHITE" />
