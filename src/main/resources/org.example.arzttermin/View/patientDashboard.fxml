                                                prefHeight="30.0" prefWidth="200.0"
                                                style="-fx-background-color: #5E9F5A; -fx-background-radius: 10;"
                                                text="Termin buchen" textFill="WHITE">
                                            <font><Font name="System Bold" size="12.0" /></font>
                                        </Button>
                                    </children>
                                </Pane>

                                <Pane layoutX="763.0" layoutY="208.0" prefHeight="385.0" prefWidth="375.0"
                                      style="-fx-background-color: #1A1D22; -fx-border-color: #5e9f5a; -fx-border-width: 5px; -fx-background-radius: 10px; -fx-border-radius: 5;">
                                    <children>
                                        <AnchorPane fx:id="doctorProfilePane" layoutX="10.0" layoutY="11.0" prefHeight="365.0" prefWidth="358.0" />
                                    </children>
                                </Pane>

                            </children>
                        </AnchorPane>

                    </content>
                </ScrollPane>

            </children>
        </StackPane>

    </children>
</AnchorPane>
