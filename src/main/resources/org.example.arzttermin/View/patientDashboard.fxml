                                        <Label layoutX="17.0" layoutY="143.0" text="Ärzte:" textFill="WHITE">
                                            <font><Font name="System Bold" size="11.0" /></font>
                                        </Label>
                                        <ComboBox fx:id="doctorComboBox" layoutX="111.0" layoutY="139.0" prefHeight="25.0" prefWidth="173.0" />

                                        <Label layoutX="15.0" layoutY="186.0" text="Datum:" textFill="WHITE">
                                            <font><Font name="System Bold" size="11.0" /></font>
                                        </Label>
                                        <ComboBox fx:id="dateComboBox" layoutX="111.0" layoutY="182.0" prefHeight="25.0" prefWidth="173.0" />

                                        <Label layoutX="14.0" layoutY="229.0" text="Uhrzeit:" textFill="WHITE">
                                            <font><Font name="System Bold" size="11.0" /></font>
                                        </Label>
                                        <ComboBox fx:id="timeComboBox" layoutX="112.0" layoutY="225.0" prefHeight="25.0" prefWidth="173.0" />

